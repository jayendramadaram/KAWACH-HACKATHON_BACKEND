generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username String @db.VarChar(255)
  password String
  phnum String @unique
  Userverifed Boolean @default(false)
  ReportedSpamNums Items[] @relation("Spam")
  ReportedFraudNums Items[] @relation("Fraud")
}

model Items {
  id Int @default(autoincrement()) @id
  Item String @unique 
  Type SpamType @default(Mobile)
  SpamReport User[] @relation("Spam")
  FraudNums User[] @relation("Fraud")
}

enum SpamType {
 Mobile
 Sms
}

enum CASETYPE {
 Spam
 Fraud
}

model predb {
  id Int @default(autoincrement()) @id
  item String @unique 
  type SpamType @default(Mobile)
  casetype CASETYPE @default(Spam)
  context String 
}


